{% extends 'base.html.twig' %}

{% block body_id 'ticker_new' %}

{% block main %}

    <div class="row">
        <div class="col-lg-4">

            <h1>New Ticker</h1>

            {{ form_start(form) }}
                {{ form_row(form.code) }}
                {{ form_row(form.summary) }}

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save" aria-hidden="true"></i> Guardar
                </button>

                {{ form_widget(form.saveAndCreateNew, {label: 'Guardar y crear nueva', attr: {class: 'btn btn-primary'}}) }}
                <a href="/" class="btn btn-link">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> Atras
                </a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
